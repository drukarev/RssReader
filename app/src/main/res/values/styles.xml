<resources>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Text">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Text.Headline">
        <item name="android:textColor">@color/textPrimaryInverted</item>
    </style>

    <style name="Text.Headline.Primary">
        <item name="android:textSize">@dimen/textXL</item>
    </style>

    <style name="Text.Headline.Secondary">
        <item name="android:textSize">@dimen/textL</item>
    </style>

    <style name="Text.Title">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">@dimen/textL</item>
    </style>

    <style name="Text.Subtitle">
        <item name="android:textColor">@color/textSecondary</item>
        <item name="android:textSize">@dimen/textM</item>
    </style>

    <style name="Text.Info">
        <item name="android:textColor">@color/textInfo</item>
        <item name="android:textSize">@dimen/textS</item>
    </style>

    <style name="Text.Button">
        <item name="android:textColor">@color/textPrimaryInverted</item>
        <item name="android:textSize">@dimen/textM</item>
    </style>

    <style name="CollapsingToolbarLayout">
        <item name="collapsedTitleTextAppearance">@style/Text.Headline.Secondary</item>
        <item name="expandedTitleTextAppearance">@style/Text.Headline.Primary</item>
        <item name="contentScrim">@color/colorPrimary</item>
        <item name="expandedTitleMarginBottom">@dimen/spaceM</item>
        <item name="expandedTitleMarginEnd">@dimen/spaceM</item>
        <item name="expandedTitleMarginStart">@dimen/spaceM</item>
        <item name="expandedTitleMarginTop">0dp</item>
        <item name="layout_scrollFlags">scroll|exitUntilCollapsed|snap</item>
        <item name="titleEnabled">true</item>
    </style>

    <style name="Button">
        <item name="android:paddingTop">@dimen/spaceS</item>
        <item name="android:paddingBottom">@dimen/spaceS</item>
        <item name="android:paddingStart">@dimen/spaceM</item>
        <item name="android:paddingEnd">@dimen/spaceM</item>
        <item name="android:background">@drawable/button_state</item>
        <item name="android:textAppearance">@style/Text.Button</item>
    </style>
</resources>
